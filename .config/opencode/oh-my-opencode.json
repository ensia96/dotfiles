{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "google_auth": false,
  "agents": {
    "Sisyphus": {
      "permission": {
        "bash": {
          "*": "ask",
          "git status": "allow",
          "git diff*": "allow",
          "git log*": "allow",
          "git show*": "allow",
          "git branch": "allow",
          "git remote -v": "allow",
          "ls*": "allow",
          "pwd": "allow",
          "which*": "allow",
          "whoami": "allow"
        }
      }
    },
    "librarian": {
      "model": "opencode/glm-4.7-free",
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    },
    "explore": {
      "model": "google/antigravity-gemini-3-flash",
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    },
    "frontend-ui-ux-engineer": {
      "model": "google/antigravity-gemini-3-pro-high",
      "permission": {
        "bash": "ask",
        "edit": {
          "*": "allow",
          ".git/**": "deny",
          ".github/**": "deny"
        }
      }
    },
    "document-writer": {
      "model": "google/antigravity-gemini-3-flash",
      "permission": {
        "bash": "ask",
        "edit": {
          "*": "allow",
          ".git/**": "deny",
          ".github/**": "deny"
        }
      }
    },
    "multimodal-looker": {
      "model": "google/antigravity-gemini-3-flash",
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    }
  }
}
